<Page x:Class="napelemrendszerek_frontend.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:napelemrendszerek_frontend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage" Background="White">

    <Grid>
        <Label Content="Bejelentkezés" FontSize="30" Margin="0 70 0 0" HorizontalAlignment="Center" FontStyle="Italic"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="Felhasználónév" FontSize="10" Width="200" FontWeight="Light" FontStyle="Italic" Padding="2 5 5 0"/>
            <TextBox x:Name="TB_username" Width="200"/>
            <Label Content="Jelszó" FontSize="10" Width="200" FontWeight="Light" FontStyle="Italic" Margin="0 10 0 0" Padding="2 5 5 0"/>
            <PasswordBox x:Name="PB_password" Width="200"/>

            <Button x:Name="BTN_logInButton" Width="200" Margin="20" Content="Belépés" Click="BTN_logInButton_Click"/>
        </StackPanel>        
    </Grid>
</Page>
